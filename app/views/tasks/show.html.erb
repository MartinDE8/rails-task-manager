<h2><%= @task.title %></h2>

<button type="button"><%= link_to"Edit task", edit_task_path(@task) %>
</button>

<div class="top_container">
  <div class="text">
    <p><%= @task.details %></p>
  </div>

  <% if @task.completed %>
    <i class="far fa-check-square">  This task is completed!</i>
  <% else %>
    <i class="far fa-square">  This task is not completed yet!</i>
  <% end %>
</div>
<br>

<%= link_to"Back to My tasks", tasks_path %>
